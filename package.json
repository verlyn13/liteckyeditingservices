{
  "name": "litecky-editing-services",
  "type": "module",
  "version": "1.0.0",
  "description": "Professional academic editing services website - Full-stack application",
  "scripts": {
    "dev": "astro dev",
    "dev:env": "bash ./scripts/dev-with-env.sh",
    "dev:functions": "bash ./scripts/dev-with-functions.sh",
    "start": "astro dev",
    "build:cms-config": "node scripts/build-cms-config.mjs",
    "build:cms": "node scripts/build-cms.mjs",
    "build:cms-hash": "node scripts/build-cms-hash.mjs",
    "build": "pnpm build:cms-config && pnpm build:cms && pnpm build:cms-hash && pnpm build:admin-sentry && astro build",
    "build:admin-sentry": "node scripts/build-sentry-admin.mjs",
    "build:check": "pnpm build:cms && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .astro,.svelte",
    "format": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "test:visual": "playwright test tests/e2e/visual.spec.ts",
    "test:visual:update": "playwright test tests/e2e/visual.spec.ts --update-snapshots",
    "test:cms": "playwright test tests/e2e/cms.spec.ts",
    "test:cms:prod": "BASE_URL=https://www.liteckyeditingservices.com playwright test tests/e2e/cms.spec.ts",
    "test:cms:headers": "playwright test tests/e2e/cms-config-and-callback.spec.ts",
    "test:cms:headers:prod": "BASE_URL=https://www.liteckyeditingservices.com playwright test tests/e2e/cms-config-and-callback.spec.ts",
    "test:sentry": "playwright test tests/sentry-integration.spec.ts",
    "test:sentry:prod": "BASE_URL=https://www.liteckyeditingservices.com playwright test tests/sentry-integration.spec.ts",
    "smoke:url": "bash scripts/deploy/preview-smoke.sh",
    "smoke:prod": "bash scripts/deploy/preview-smoke.sh https://www.liteckyeditingservices.com",
    "test:a11y": "node tests/a11y/check.js",
    "test:admin": "node tests/admin-smoke.spec.mjs",
    "test:sendgrid": "node tests/sendgrid-test.mjs",
    "typecheck": "tsc --noEmit && tsc -p functions/tsconfig.json --noEmit && tsc -p workers/queue-consumer/tsconfig.json --noEmit",
    "clean": "rm -rf dist .astro",
    "biome:check": "biome check --write .",
    "biome:fix": "biome check --write .",
    "biome:triage": "biome ci --reporter=summary .",
    "biome:triage:json": "biome ci --reporter=json-pretty .",
    "biome:ci": "biome ci .",
    "biome:ci:changed": "biome ci --changed main --reporter=summary",
    "biome:changed": "biome check --changed --write",
    "check": "pnpm run clean && pnpm run validate:all && pnpm run biome:check && pnpm run typecheck && pnpm run format",
    "lint:fix": "pnpm run format && pnpm run lint --fix",
    "validate:versions": "node scripts/validate/package-versions.mjs",
    "validate:structure": "node scripts/validate/repo-structure.mjs",
    "validate:paths": "node scripts/validate/path-structure.mjs",
    "validate:decap": "node scripts/validate/decap-bundle.mjs",
    "validate:sentry": "node scripts/validate/sentry-setup.mjs",
    "validate:docs": "node scripts/validate/docs-accuracy.mjs",
    "validate:all": "pnpm run validate:versions && pnpm run validate:structure && pnpm run validate:paths && pnpm run validate:decap && pnpm run validate:sentry && pnpm run validate:docs",
    "gate:docs": "node scripts/gates/require-docs.mjs",
    "policy:check": "pnpm run validate:all && pnpm run gate:docs",
    "precommit": "pnpm run validate:all",
    "prepush": "pnpm run gate:docs",
    "icons:build": "PADDING_PCT=6 bash scripts/build-icons.sh public/icons/book_and_check.svg public/icons"
  },
  "dependencies": {
    "@astrojs/sitemap": "latest",
    "@astrojs/svelte": "latest",
    "@fontsource-variable/inter": "latest",
    "@fontsource/lora": "latest",
    "@sendgrid/mail": "latest",
    "@sentry/astro": "latest",
    "@sentry/browser": "latest",
    "astro": "latest",
    "sharp": "latest",
    "svelte": "latest",
    "decap-cms-app": "3.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "yaml": "latest",
    "tailwindcss": "latest",
    "@sentry/cloudflare": "latest"
  },
  "devDependencies": {
    "@astrojs/check": "latest",
    "@biomejs/biome": "2.2.5",
    "@cloudflare/workers-types": "latest",
    "@eslint/js": "latest",
    "@playwright/test": "1.55.1",
    "@sveltejs/vite-plugin-svelte": "latest",
    "@tailwindcss/container-queries": "latest",
    "@tailwindcss/forms": "latest",
    "@tailwindcss/typography": "latest",
    "@tailwindcss/vite": "latest",
    "@types/node": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitest/ui": "latest",
    "autoprefixer": "latest",
    "decap-cms": "3.8.4",
    "eslint": "latest",
    "esbuild": "latest",
    "eslint-plugin-astro": "latest",
    "eslint-plugin-svelte": "latest",
    "globals": "latest",
    "happy-dom": "latest",
    "pa11y": "latest",
    "pa11y-ci": "latest",
    "playwright": "1.55.1",
    "postcss": "latest",
    "prettier": "latest",
    "prettier-plugin-astro": "latest",
    "prettier-plugin-tailwindcss": "latest",
    "puppeteer": "latest",
    "svelte-eslint-parser": "latest",
    "typescript": "latest",
    "vite": "latest",
    "vitest": "latest",
    "wrangler": "latest"
  },
  "engines": {
    "node": ">=24 <25",
    "pnpm": ">=10.16.0"
  },
  "packageManager": "pnpm@10.17.1",
  "pnpm": {
    "overrides": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    }
  }
}
