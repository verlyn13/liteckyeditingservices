{
  "name": "litecky-editing-services",
  "type": "module",
  "version": "1.0.0",
  "description": "Professional academic editing services website - Full-stack application",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:a11y": "node tests/a11y/check.js",
    "typecheck": "astro check && tsc --noEmit",
    "check": "pnpm run typecheck && pnpm run lint",
    "lint:fix": "pnpm run format && pnpm run lint --fix",
    "validate:versions": "node scripts/validate/package-versions.mjs",
    "validate:structure": "node scripts/validate/repo-structure.mjs",
    "validate:all": "pnpm run validate:versions && pnpm run validate:structure",
    "gate:docs": "node scripts/gates/require-docs.mjs",
    "policy:check": "pnpm run validate:all && pnpm run gate:docs",
    "precommit": "pnpm run validate:all",
    "prepush": "pnpm run gate:docs"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/svelte": "^7.1.1",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource/lora": "^5.2.8",
    "astro": "^5.13.10",
    "sharp": "^0.34.4",
    "svelte": "^5.39.4",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.0",
    "@sveltejs/vite-plugin-svelte": "6.2.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.18",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.5.2",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "happy-dom": "^18.0.1",
    "pa11y": "^9.0.0",
    "pa11y-ci": "^4.0.1",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte-eslint-parser": "^1.3.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "wrangler": "^4.38.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "pnpm": ">=10.16.0"
  },
  "packageManager": "pnpm@10.16.0"
}