{
	"$schema": "https://biomejs.dev/schemas/latest/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn",
				"noAssignInExpressions": "warn",
				"useIterableCallbackReturn": "warn"
			}
		}
	},
	"files": {
		"includes": ["**/*.{js,mjs,cjs,ts,tsx,json,jsonc}"],
		"experimentalScannerIgnores": [
			"dist/**",
			"node_modules/**",
			"public/admin/**"
		]
	}
}
