---
export interface Props {
  quote: string;
  author: string;
  role?: string;
}

const { quote, author, role } = Astro.props;
---

<section class="section">
  <div class="container max-w-3xl">
    <blockquote class="rounded border border-soft-gray bg-white p-6 shadow-sm">
      <p class="text-lg text-primary-navy italic">“{quote}”</p>
      <footer class="mt-4 text-sm text-text-secondary">— {author}{role ? `, ${role}` : ''}</footer>
    </blockquote>
  </div>
</section>
