---
export interface Props {
  title: string;
  subtitle?: string;
  primaryCta?: { href: string; label: string };
  secondaryCta?: { href: string; label: string };
}

const {
  title,
  subtitle = 'Expert academic editing for dissertations and theses. PhD-qualified editors, 2â€“3 day turnaround, secure and confidential.',
  primaryCta = { href: '/contact', label: 'Get Started' },
  secondaryCta = { href: '/services', label: 'View Services' },
} = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="grid lg:grid-cols-2 gap-8 items-center">
      <div>
        <h1 class="text-4xl md:text-5xl font-bold text-primary-navy text-balance">{title}</h1>
        <p class="mt-4 text-lg text-text-secondary max-w-prose">{subtitle}</p>
        <div class="mt-6 flex gap-3">
          <a class="btn btn-primary" href={primaryCta.href}>{primaryCta.label}</a>
          <a class="btn btn-secondary" href={secondaryCta.href}>{secondaryCta.label}</a>
        </div>
      </div>
      <div class="relative">
        <div class="aspect-[4/3] bg-gray-100 rounded-lg overflow-hidden">
          <img
            src="/images/editor-workspace.svg"
            alt="Professional academic editor at work"
            class="w-full h-full object-cover"
            loading="eager"
          />
        </div>
        <div class="absolute -bottom-4 -right-4 bg-white p-4 rounded-lg shadow-lg">
          <p class="text-sm font-semibold text-primary-navy">20+ Years Experience</p>
          <p class="text-xs text-text-secondary">5,000+ Papers Edited</p>
        </div>
      </div>
    </div>
  </div>
</section>
