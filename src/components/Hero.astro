---
export interface Props {
  title: string;
  subtitle?: string;
  primaryCta?: { href: string; label: string };
  secondaryCta?: { href: string; label: string };
}

const {
  title,
  subtitle = 'Professional academic editing for dissertations and theses. PhD-qualified editors, 2â€“3 day turnaround, secure and confidential.',
  primaryCta = { href: '/contact', label: 'Get Started' },
  secondaryCta = { href: '/services', label: 'View Services' },
} = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="grid items-center gap-8 lg:grid-cols-2">
      <div>
        <h1 class="text-4xl font-bold text-balance text-primary-navy md:text-5xl">{title}</h1>
        <p class="mt-4 max-w-prose text-lg text-text-secondary">{subtitle}</p>
        <div class="mt-6 flex gap-3">
          <a class="btn btn-primary" href={primaryCta.href}>{primaryCta.label}</a>
          <a class="btn btn-secondary" href={secondaryCta.href}>{secondaryCta.label}</a>
        </div>
      </div>
      <div class="relative">
        <div class="aspect-[4/3] overflow-hidden rounded-lg bg-gray-100">
          <img
            src="/images/editor-workspace.svg"
            alt="Professional academic editor at work"
            class="h-full w-full object-cover"
            loading="eager"
          />
        </div>
        <div class="absolute -right-4 -bottom-4 rounded-lg bg-white p-4 shadow-lg">
          <p class="text-sm font-semibold text-primary-navy">20+ Years Experience</p>
          <p class="text-xs text-text-secondary">5,000+ Papers Edited</p>
        </div>
      </div>
    </div>
  </div>
</section>
