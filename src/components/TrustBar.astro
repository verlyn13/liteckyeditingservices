---
export interface Props {
  logos?: Array<{ src: string; alt: string; width?: number; height?: number }>;
}

const { logos = [] } = Astro.props;
---

<section class="border-y border-soft-gray bg-white">
  <div class="container py-6">
    <p class="mb-4 text-sm tracking-wide text-text-secondary uppercase">Trusted by scholars from</p>
    <div class="grid grid-cols-2 items-center gap-6 sm:grid-cols-3 md:grid-cols-5">
      {
        logos.length === 0 ? (
          <>
            <div class="h-8 rounded bg-soft-gray/60" aria-hidden="true" />
            <div class="h-8 rounded bg-soft-gray/60" aria-hidden="true" />
            <div class="h-8 rounded bg-soft-gray/60" aria-hidden="true" />
            <div class="h-8 rounded bg-soft-gray/60" aria-hidden="true" />
            <div class="h-8 rounded bg-soft-gray/60" aria-hidden="true" />
          </>
        ) : (
          logos.map((l) => (
            <img
              src={l.src}
              alt={l.alt}
              width={l.width}
              height={l.height}
              class="max-h-8 object-contain"
              loading="lazy"
            />
          ))
        )
      }
    </div>
  </div>
</section>
