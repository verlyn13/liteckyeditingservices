---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
---

<BaseLayout title="About" description="Academic editing grounded in clarity and care">
  <script type="application/ld+json" is:inline>{JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'AboutPage',
    'mainEntity': {
      '@type': 'ProfessionalService',
      'name': 'Litecky Editing Services',
      'description': 'Expert academic editing with over 20 years of experience',
      'foundingDate': '2003',
      'founder': {
        '@type': 'Person',
        'name': 'Dr. Litecky',
        'alumniOf': 'PhD University',
        'hasOccupation': {
          '@type': 'Occupation',
          'name': 'Academic Editor',
          'description': 'Professional editing of dissertations and theses'
        }
      },
      'knowsAbout': ['Academic Writing', 'Dissertation Editing', 'Thesis Editing', 'APA Style', 'MLA Style', 'Chicago Style']
    }
  })}</script>
  <Header currentPath={Astro.url.pathname} />
  <main id="main" class="section">
    <div class="container max-w-prose">
      <h1 class="text-3xl md:text-4xl font-bold text-primary-navy">About</h1>
      <p class="mt-3 text-text-secondary">Litecky Editing Services offers expert academic editing with a calm, structured approach. Our goal is to reduce anxiety and deliver clear, publication-ready documents.</p>
      <p class="mt-3 text-text-secondary">We focus on transparent process, secure handling, and respectful collaborationâ€”especially for graduate students under pressure.</p>
    </div>
  </main>
</BaseLayout>
