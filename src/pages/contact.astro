---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import contactScriptUrl from '../scripts/contact-form.js?url';

const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || '1x00000000000000000000AA';
---

<BaseLayout title="Contact" description="Request a free quote for academic editing services. Fast turnaround, secure document handling, PhD-qualified editors.">
  <script type="application/ld+json" is:inline>{JSON.stringify({
    '@context': 'https://schema.org',
    '@type': 'ContactPage',
    'mainEntity': {
      '@type': 'ProfessionalService',
      'name': 'Litecky Editing Services',
      'description': 'Professional academic editing for dissertations and theses',
      'areaServed': 'Worldwide',
      'priceRange': '$$',
      'aggregateRating': {
        '@type': 'AggregateRating',
        'ratingValue': '4.9',
        'reviewCount': '150'
      }
    }
  })}</script>
  <Header currentPath={Astro.url.pathname} />
  <main id="main" class="section">
    <div class="container max-w-2xl">
      <h1 class="text-3xl md:text-4xl font-bold text-primary-navy">Get a Quote</h1>
      <p class="mt-3 text-text-secondary">Short, low-pressure form. We only ask for what we need to provide an accurate quote.</p>

      <form class="mt-6 space-y-4" method="post" action="/api/contact" data-contact-form>
        <div>
          <label for="name">Name</label>
          <input id="name" name="name" type="text" autocomplete="name" required />
        </div>
        <div>
          <label for="email">Email</label>
          <input id="email" name="email" type="email" autocomplete="email" required />
        </div>
        <div>
          <label for="service">Service Type</label>
          <select id="service" name="service" required>
            <option value="">Select an option</option>
            <option value="substantive">Substantive Editing</option>
            <option value="proofreading">Proofreading & Style</option>
          </select>
        </div>
        <div>
          <label for="deadline">Project Deadline</label>
          <input id="deadline" name="deadline" type="date" min={new Date().toISOString().split('T')[0]} required />
          <p class="text-xs text-text-secondary mt-1">When do you need this completed?</p>
        </div>
        <div>
          <label for="message">Message (optional)</label>
          <textarea id="message" name="message" rows="4" placeholder="Any context you'd like to share"></textarea>
        </div>

        <!-- Turnstile Widget -->
        <div
          class="cf-turnstile"
          data-sitekey={turnstileSiteKey}
          data-theme="auto"
          data-size="normal"
          data-callback="onTurnstileSuccess"
          data-error-callback="onTurnstileError"
          data-expired-callback="onTurnstileExpired"
        ></div>

        <div>
          <button class="btn btn-primary" type="submit" id="submit-btn" disabled>Get My Free Quote</button>
        </div>
      </form>
    </div>
  </main>

  <!-- Turnstile Script -->
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

  <!-- Turnstile Callbacks -->
  <script is:inline>
    window.onTurnstileSuccess = function(token) {
      console.log('Turnstile verification successful');
      document.getElementById('submit-btn').disabled = false;
    };

    window.onTurnstileError = function(errorCode) {
      console.error('Turnstile error:', errorCode);
      document.getElementById('submit-btn').disabled = true;
      alert('Verification failed. Please refresh the page and try again.');
    };

    window.onTurnstileExpired = function() {
      console.warn('Turnstile token expired');
      document.getElementById('submit-btn').disabled = true;
    };
  </script>

  <script type="module" src={contactScriptUrl} defer></script>
</BaseLayout>
