---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import TrustBar from '../components/TrustBar.astro';
import ProcessSnapshot from '../components/ProcessSnapshot.astro';
import FeaturedTestimonial from '../components/FeaturedTestimonial.astro';

// Load homepage data from CMS-editable JSON file
import homeData from '../../content/pages/home.json';
---

<BaseLayout title="Home" description="Professional academic editing services">
  <Header currentPath={Astro.url.pathname} />
  <main id="main">
    <Hero
      title={homeData.hero.title}
      subtitle={homeData.hero.subtitle}
      primaryCta={homeData.hero.primaryCta}
      secondaryCta={homeData.hero.secondaryCta}
      statsBadge={homeData.hero.statsBadge}
    />
    <TrustBar />
    <ProcessSnapshot />
    <FeaturedTestimonial
      quote={homeData.featuredTestimonial.quote}
      author={homeData.featuredTestimonial.author}
      role={homeData.featuredTestimonial.role}
    />
  </main>
</BaseLayout>
