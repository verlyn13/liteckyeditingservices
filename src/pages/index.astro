---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import TrustBar from '../components/TrustBar.astro';
import ProcessSnapshot from '../components/ProcessSnapshot.astro';
import FeaturedTestimonial from '../components/FeaturedTestimonial.astro';
---

<BaseLayout title="Home" description="Professional academic editing services">
  <Header currentPath={Astro.url.pathname} />
  <main id="main">
    <Hero title="Expert Academic Editing" />
    <TrustBar />
    <ProcessSnapshot />
    <FeaturedTestimonial
      quote="They transformed my dissertation into a polished, publication-ready document."
      author="Doctoral Candidate"
      role="Education"
    />
  </main>
</BaseLayout>
