# Application
NODE_ENV=development
PUBLIC_SITE_URL=http://localhost:4321

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.xxxxxxxxxxxx
EMAIL_FROM=hello@liteckyeditingservices.com
EMAIL_TO=admin@liteckyeditingservices.com
SENDGRID_DOMAIN_ID=54920324

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/litecky_editing

# Content Management
DECAP_CMS_BACKEND=github
DECAP_CMS_REPO=verlyn13/liteckyeditingservices
DECAP_CMS_BRANCH=main

# Analytics
PUBLIC_VERCEL_ANALYTICS_ID=

# Error Tracking & Monitoring (Sentry)
# Get your DSN from: https://sentry.io/settings/[org]/projects/[project]/keys/
PUBLIC_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
PUBLIC_SENTRY_ENVIRONMENT=development
PUBLIC_SENTRY_RELEASE=1.0.0

# Sentry build-time configuration (for Astro integration source maps upload)
# These are used only during build and should be set in CI (Cloudflare Pages) or your shell env.
# SENTRY_AUTH_TOKEN is sensitive; do not commit. Store in gopass and sync to Pages secrets.
SENTRY_ORG=happy-patterns-llc
SENTRY_PROJECT=javascript-astro
# SENTRY_AUTH_TOKEN=sntrys_xxx (set in CI / gopass)

# File Upload
UPLOAD_MAX_SIZE_MB=50
ALLOWED_FILE_TYPES=.doc,.docx,.pdf,.txt,.odt,.rtf

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000

# Security
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=http://localhost:4321
