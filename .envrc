#!/usr/bin/env bash

# Robust mise + dotenv direnv configuration (no external eval)
# - Loads tool versions via mise
# - Loads environment from .dev.vars/.env if present

use_mise() {
  direnv_load mise direnv exec
}

# Activate mise for this directory
use mise

# Load env files if present (development only)
dotenv_if_exists .dev.vars
dotenv_if_exists .env

# Quiet direnv logs
export DIRENV_LOG_FORMAT=

